{% extends '::base.html.twig' %}

{% block body %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Wallet</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.wallet }}</td>
                    <td>
                        <a href="{{ path('admin_user_profile', {'id': user.id}) }}">View</a>

                        <a href="{{ path('amdin_edit_user', {'id': user.id}) }}">Edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}