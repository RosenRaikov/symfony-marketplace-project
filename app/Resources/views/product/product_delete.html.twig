{% extends '::base.html.twig' %}

{% block body %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('product_delete', {'id': product.id}) }}" method="POST">
                <fieldset>
                    <legend>Delete product</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_title">Product</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="product_name" placeholder="Product name"
                                   name="marketplace_bundle_product_type[name]" value="{{ product.name }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_price">Price</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="product_price" placeholder="Product price"
                                   name="marketplace_bundle_product_type[price]" value="{{ product.price }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_description">Description</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="product_description"
                                  name="marketplace_bundle_product_type[description]" disabled>{{ product.description }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

